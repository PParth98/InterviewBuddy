<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/intback">


    <TextView
        android:id="@+id/txtGreet"
        android:layout_width="356dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Welcome, "
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtIntrest"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGreet" />

    <TextView
        android:id="@+id/txtedit"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:text="edit"
        android:drawableLeft="@drawable/i1"
        android:clickable="true"
        android:onClick="doEdit"
        android:textColor="#6200EA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtIntrest"
        app:layout_constraintTop_toBottomOf="@+id/txtGreet" />

    <Button
        android:id="@+id/button"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/round_border"
        android:text="START INTERVIEW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIntrest"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>